<!-- edit-blog-modal.ejs -->
<!-- Instead of the settings page as a separate page this will be displayed as a modal -->
<div class="modal fade" id="editBlogModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Blog Settings</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form id="editBlogForm" action="/blog-settings" method="POST">
                    <!-- Blog name -->
                    <div class="form-group">
                        <label for="blogName">Blog Name</label>
                        <input type="text" class="form-control" id="blogName" 
                            name="blogName" value="<%= blog_name %>" required maxlength="30">
                    </div>
                    <!-- Blog description -->
                    <div class="form-group">
                        <label for="blogDescription">Blog Description</label>
                        <textarea class="form-control" id="blogDescription"
                            name="blogDescription" required maxlength="100"><%= blog_description %></textarea>
                    </div>
                    <!-- Author name -->
                    <div class="form-group">
                        <label for="authorName">Author Name</label>
                        <select class="form-control" id="authorName" name="authorId">
                            <% for (let i = 0; i < users.length; i++) { %>
                                <option value="<%= users[i].user_id %>" <% if (users[i].user_id === author_id) { %>selected<% } %>>
                                    <%= users[i].user_name %>
                                </option>
                            <% } %>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" form="editBlogForm" class="btn btn-primary">Save changes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>