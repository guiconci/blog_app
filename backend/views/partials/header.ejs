<header class="sticky top-0 z-50 bg-white/80 dark:bg-gray-900/80 backdrop-blur shadow transition-all duration-300">
    <div class="max-w-screen-xl mx-auto px-0.5 py-0.5 flex justify-between items-start">
      <!-- Left: Your Name -->
      <div id="head-name" class="text-md text-gray-800 dark:text-white">
        Guilherme Conci Dev
      </div>

      <!-- Right: Nav Links + Dark Mode Button -->
      <div class="flex items-center gap-4">
        <!--Blog link-->
        <a style="font-family: 'Inter', sans-serif;" href="/reader-home"
          class="text-gray-700 dark:text-gray-300 hover:underline">Blog</a>
        <!--Profile link-->
        <a style="font-family: 'Inter Tight', sans-serif; font-weight: 300;" href="/profile"
          class="text-gray-700 dark:text-gray-300 hover:underline">Profile</a>
        <!--Theme toggle-->
        <button id="dark-toggle" class="text-gray-500 dark:text-white-300 text-xl" aria-label="Switch to dark mode">
          <!-- Moon icon (outline) for light mode -->
          <svg id="moonIcon" xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 hidden" fill="none" viewBox="0 0 24 24"
            stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21 12.79A9 9 0 1111.21 3 7 7 0 0021 12.79z" />
          </svg>
          <!-- Sun icon (outline) for dark mode -->
          <svg id="sunIcon" xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 hidden" fill="none" viewBox="0 0 24 24"
            stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round"
              d="M12 3v2m0 14v2m9-9h-2M5 12H3m15.364-6.364l-1.414 1.414M6.05 17.95l-1.414-1.414M17.95 17.95l-1.414-1.414M6.05 6.05L4.636 7.464M12 8a4 4 0 100 8 4 4 0 000-8z" />
          </svg>
        </button>

      </div>
    </div>
  </header>